<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imgoing="http://schemas.android.com/apk/res/net.gringrid.imgoing"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/imgoing_content"
    >
    
	<!-- Main Menu Start -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:gravity="center"
        android:orientation="vertical" >

        <net.gringrid.imgoing.controller.MainMenu
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            imgoing:current_menu="1"
            android:gravity="center" />
				    
    </LinearLayout>
    <!-- Main Menu end -->
    
    
    <!-- Body Start -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="690"
        android:orientation="vertical"
        android:weightSum="480"
        android:layout_marginTop="5dp"
        >
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="40">

		    
			<LinearLayout
                android:id="@+id/id_bt_receive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_message_tap_off"
				android:layout_marginRight="5dp"
                >
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:text="받은메시지"/>
            </LinearLayout>
		    
		    <LinearLayout
                android:id="@+id/id_bt_send"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_message_tap_off"
                android:layout_marginLeft="5dp" 
                >
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:text="보낸메시지"/>
            </LinearLayout>

            			
		</LinearLayout>
		    
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="440">
			<ListView
			    android:id="@+id/id_lv_message"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:cacheColorHint="#00000000"/>
		</LinearLayout>
		
		
								    
	</LinearLayout>
	<!-- Body Start -->
</LinearLayout>