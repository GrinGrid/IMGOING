<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/id_tv_email"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="Email : ID로 사용 할 메일주소를 입력합니다."/>
	
    
	<EditText
	    android:id="@+id/id_et_email" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:inputType="textEmailAddress"
	    android:layout_below="@id/id_tv_email" 
	    android:hint="예) gringridsoft@gmail.com"/>
	
	<TextView
        android:id="@+id/id_tv_phone_number"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/id_et_email"
	    android:text="전화번호 : 상대방이 위치를 전송할 때 주소록에 저장된 전화번호를 입력합니다."/>
	
	<EditText
	    android:id="@+id/id_et_phone_number"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/id_tv_phone_number"
	    android:inputType="number" 
	    android:hint="예) 01012345678"/>
	
	<EditText
	    android:id="@+id/id_et_password"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/id_et_phone_number"
	    android:inputType="textPassword" 
	    android:hint="비밀번호 4~8 자리"/>
	
	<EditText
	    android:id="@+id/id_et_repassword"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/id_et_password"
	    android:inputType="textPassword"
	    android:hint="비밀번호 확인 4~8 자리"/>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/id_et_repassword"
	    >
		<Button
		    android:id="@+id/id_bt_submit"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="@string/join" />
		
		<Button
		    android:id="@+id/id_bt_cancel"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="@string/cancel" />    
	</LinearLayout>
	
</RelativeLayout>
