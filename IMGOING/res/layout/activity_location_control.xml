<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    
	<!-- Main Menu Start -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:orientation="horizontal"
        android:background="#000000" 
        >
        <LinearLayout
            android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center" 
            >
            <ImageView
                android:id="@+id/id_menu_location_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location_control" 
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
	        android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/menu_line_height" 
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1" 
	        android:gravity="center" 
	        
            >
            <ImageView
                android:id="@+id/id_menu_location_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location_list" 
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
	        android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/menu_line_height" 
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:gravity="center" 
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/config" 
                />
        </LinearLayout>
    </LinearLayout>
    <!-- Main Menu end -->
    
    
    <!-- Menu Indicator Start -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20" 
        >
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_weight="1">
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/menu_selector"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
	    </LinearLayout>
	    <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
	    </LinearLayout>
    </LinearLayout>
    <!-- Menu Indicator End -->
    
    
    <!-- Body Start -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="680"
        android:orientation="horizontal"
        android:weightSum="480"
        >
        
        
        <!-- Left Body Start -->
        <LinearLayout
            android:layout_width="0dp"
        	android:layout_height="match_parent"
        	android:layout_weight="160"
        	android:orientation="vertical"
        	android:weightSum="680"
        	android:background="@drawable/location_control_body_bg"
            >
            <LinearLayout
                android:layout_width="match_parent"
	        	android:layout_height="0dp"
	        	android:layout_weight="50"
	        	android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/friend_icon" 
                    />
                <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10px"
	                android:text="친구목록" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
	        	android:layout_height="0dp"
	        	android:layout_weight="30"
	        	android:gravity="center"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:src="@drawable/icon_search"/>
                <LinearLayout 
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:paddingRight="10dp"
                    android:orientation="vertical"
                    >
                    <EditText 
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:layout_marginLeft="5dp"
	                    android:background="#00000000"
	                    />
                    <ImageView
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="left"
	                    android:layout_marginTop="-10px"
	                    android:background="@drawable/search_text_underline"/>
	                
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
	        	android:layout_height="0dp"
	        	android:layout_weight="595"
                >
                <ListView
                    android:id="@+id/id_lv_contacts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <!-- Left Body End -->
        
        
        <!-- Right Body Start -->
        <LinearLayout
            android:layout_width="0dp"
        	android:layout_height="match_parent"
        	android:layout_weight="320"
        	android:layout_marginLeft="10px"
        	android:orientation="vertical"
        	android:weightSum="680"
        	android:background="@drawable/location_control_body_bg"
            >
            <LinearLayout
                android:layout_width="match_parent"
	        	android:layout_height="0dp"
	        	android:layout_weight="50"
	        	android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/clock_icon" 
                    />
                <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10px"
	                android:text="시간설정" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
	        	android:layout_height="0dp"
	        	android:layout_weight="200"
	        	android:gravity="center"
                >
                <TextView
                    android:id="@+id/id_tv_min"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:gravity="center_vertical|right"
	                android:layout_weight="3"
	                android:textSize="30dp"
	                android:text="5" />
                <TextView
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:gravity="center_vertical"
	                android:paddingTop="16dp"
	                android:text="분" />
                <LinearLayout 
                    android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="3"
	                android:orientation="vertical"
	                android:gravity="center_vertical"
	                android:paddingLeft="10dp"
                    >
                    <ImageView 
                        android:id="@+id/id_iv_number_up"
                        android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:src="@drawable/number_control_up"
                        />
                    <ImageView 
                        android:id="@+id/id_iv_number_down"
                        android:layout_width="wrap_content"
	                	android:layout_height="wrap_content"
	                	android:layout_marginTop="10px"
	                	android:src="@drawable/number_control_down"
                        />
                </LinearLayout>
                
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
	        	android:layout_height="0dp"
	        	android:layout_weight="150"
	        	android:orientation="horizontal"
	        	android:gravity="center_horizontal|top"
                >
                
                <TextView
                    android:id="@+id/id_tv_send_message"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="25"
	                android:paddingLeft="20dp"
	                android:paddingRight="20dp"
	                android:textSize="12dp"
	                android:text="분 단위로 Choi jiho님에게 \nLee inhee님의 위치가 전송됩니다.\n시작하시겠습니까?" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
	        	android:layout_height="0dp"
	        	android:layout_weight="250"
                >
                <LinearLayout
                    android:layout_width="0dp"
	        		android:layout_height="match_parent"
	        		android:layout_weight="1">
                </LinearLayout>
				<Button
				    android:id="@+id/id_bt_control"
				    android:layout_width="0dp"
	        		android:layout_height="wrap_content"
	        		android:layout_weight="3"
	        		android:background="@drawable/start_bt"
	        		android:textColor="#FFFFFF"
	        		android:textStyle="bold"
	        		android:text="Start" />
				<LinearLayout
                    android:layout_width="0dp"
	        		android:layout_height="match_parent"
	        		android:layout_weight="1">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
	        	android:layout_height="0dp"
	        	android:layout_weight="30"
                >
                <LinearLayout
                    android:layout_width="0dp"
	        		android:layout_height="match_parent"
	        		android:layout_weight="1">
                </LinearLayout>
				<LinearLayout
                    android:layout_width="0dp"
	        		android:layout_height="match_parent"
	        		android:layout_weight="1">
                </LinearLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/buboo" 
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- Right Body End -->
        
        
    </LinearLayout>
    <!-- Body End -->
    
</LinearLayout>