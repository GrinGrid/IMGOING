<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<!-- Main Menu Start -->
    <ImageView
		android:id="@+id/id_iv_current_menu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:src="@drawable/location_control" 
		/>

	<ImageView
		android:id="@+id/id_iv_menu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:src="@drawable/bt_menu"
		/>
	<ImageView
		android:id="@+id/id_iv_hide_menu2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:src="@drawable/config"
		android:padding="5dp"
		android:visibility="visible"
		/>
	<ImageView
		android:id="@+id/id_iv_hide_menu1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@id/id_iv_hide_menu2"
		android:src="@drawable/location_list"
		android:padding="5dp"
		android:visibility="visible"
		/>
    <!-- Main Menu end -->
    
    
</RelativeLayout>