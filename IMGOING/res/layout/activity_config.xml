<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imgoing="http://schemas.android.com/apk/res/net.gringrid.imgoing"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <!-- Main Menu Start -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:gravity="center"
        android:orientation="vertical" >

        <net.gringrid.imgoing.controller.MainMenu
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            imgoing:current_menu="2"
            android:gravity="center" />
		    
    </LinearLayout>
    <!-- Main Menu end -->


    <!-- Body Start -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="680"
        android:orientation="horizontal"
        android:weightSum="480" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/config_body_bg"
            android:orientation="vertical" >

            
            <!-- 이용안내 시작 -->
            <LinearLayout
                android:id="@+id/id_ll_guide"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    style="@style/ConfigContent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/config_guide" />
          
            </LinearLayout>
            <!-- 이용안내 끝 -->



            <!-- 받은메시지 최대보관수 시작 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    style="@style/ConfigContent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/config_max_receive" />

                <net.gringrid.imgoing.controller.Selector
                    android:id="@+id/id_selector_config_max_receive"
                    android:layout_width="120sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
            <!-- 받은메시지 최대보관수 끝 -->


            <!-- 보낸메시지 최대보관수 시작 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    style="@style/ConfigContent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/config_max_send" />

                <net.gringrid.imgoing.controller.Selector
                    android:id="@+id/id_selector_config_max_send"
                    android:layout_width="120sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
            <!-- 보낸메시지 최대보관수 끝 -->

			<!-- 전체삭제 시작 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    style="@style/ConfigContent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/config_delete" />

                <net.gringrid.imgoing.controller.Selector
                    android:id="@+id/id_selector_config_delete"
                    android:layout_width="120sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
            <!-- 전체삭제 끝 -->
            
            <!-- 알림 설정 시작 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp" >
                
			    <TextView
			        style="@style/ConfigContent"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"				        
			        android:gravity="center_vertical"
			        android:text="@string/config_alarm" />
			
			    
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp" >
                    
                	<TextView
	                    style="@style/ConfigContent"
	                    android:layout_width="0dp"
	                    android:layout_height="match_parent"
	                    android:layout_weight="1"
	                    android:gravity="center_vertical"
	                    android:text="@string/config_alarm_vibrate" />
	
					<CheckBox
	                    android:id="@+id/id_cb_alarm_vibrate_yn"
	                    style="@style/CheckBox"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content" />    
                </LinearLayout>

                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp" >
                    
                	<TextView
	                    style="@style/ConfigContent"
	                    android:layout_width="0dp"
	                    android:layout_height="match_parent"
	                    android:layout_weight="1"
	                    android:gravity="center_vertical"
	                    android:text="@string/config_alarm_sound" />
	
					<CheckBox
	                    android:id="@+id/id_cb_alarm_sound_yn"
	                    style="@style/CheckBox"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content" />    
                </LinearLayout>
                
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp" >
                    
                	<TextView
	                    style="@style/ConfigContent"
	                    android:layout_width="0dp"
	                    android:layout_height="match_parent"
	                    android:layout_weight="1"
	                    android:gravity="center_vertical"
	                    android:text="@string/config_alarm_light" />
	
					<CheckBox
	                    android:id="@+id/id_cb_alarm_light_yn"
	                    style="@style/CheckBox"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content" />    
                </LinearLayout>
                
            </LinearLayout>
            <!-- 알림 설정 끝 -->

        </LinearLayout>
    </LinearLayout>
    <!-- Body End -->

</LinearLayout>