<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="ConfigContent">
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#DE672C</item>
	</style>
	
    
    <!-- CheckBox -->
	<style name="CheckBox" parent="android:Widget.CompoundButton.CheckBox">
		<item name="android:button">@drawable/checkbox</item>
	</style>

	<!-- 이용안내 -->
    <style name="GuideContent">
		<item name="android:textSize">13sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#222222</item>
	</style>
	<style name="GuideTitle">
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#DE672C</item>
	</style>
	
    
    <!-- Title -->
    <style name="PopupTitle">
		<item name="android:textSize">12sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>
	
    <!-- Join -->
    <style name="EditTextStyle">
		<item name="android:textSize">13sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#000000</item>
	</style>
	<style name="EditTextInfoStyle">
		<item name="android:textSize">13sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#DE672C</item>
	</style>
	
	
	
</resources>